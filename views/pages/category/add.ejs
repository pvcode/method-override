<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Form 
            </div>
            <div class="panel-body">
                <% include ./../../_elements/errors %>
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" action="<%= configsSystem.PREFIX_ADMIN %>/category" method="POST">
                            <div class="form-group">
                                <label>Title</label>
                                <input class="form-control" name="title"  >
                            </div>
                            
                            <div class="form-group">
                                <label>Ordering</label>
                                <input type="number" class="form-control" name="ordering"  >
                            </div>

                            <div class="form-group">
                                <label>Status</label>
                                <select name="status" class="form-control" >
                                    <option value="novalue">Choose Status</option>
                                    <option value="active">Active</option>
                                    <option value="inactive">Inactive</option>
                                </select>
                                
                            </div>
                            
                            <div class="form-group">
                                <label>Content</label>
                                <textarea class="form-control" name="content" rows="2"  id="content_ck" ></textarea>
                            </div>
                            
                            <input class="form-control" name="id" type="hidden" >

                            <button type="submit" class="btn btn-primary">Submit </button>
                            <a type="button" href="<%= configsSystem.PREFIX_ADMIN %>/category/" class="btn btn-default">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>